{
	"name": "wildwolf/ww-smtp-settings",
	"type": "wordpress-plugin",
	"description": "Send emails via SMTP in WordPress",
	"keywords": [
		"wordpress",
		"smtp",
		"wordpress plugin",
		"plugin",
		"email"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Volodymyr Kolesnykov",
			"email": "volodymyr@wildwolf.name",
			"role": "Developer"
		}
	],
	"autoload": {
		"classmap": [
			"inc/"
		]
	},
	"require": {
		"php": "^7.3.0 || ^8.0.0",
		"composer/installers": "^1.0 || ^2.0",
		"wildwolf/singleton-trait": "^1.0.1"
	},
	"require-dev": {
		"automattic/vipwpcs": "^2.3",
		"dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
		"johnpbloch/wordpress-core": "^6.0",
		"php-stubs/wordpress-stubs": "^5.7",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"phpunit/phpunit": "^7",
		"psalm/plugin-phpunit": "^0.16.1",
		"vimeo/psalm": "^4.7",
		"wildwolf/phpunit7-php8-helper": "^1.0",
		"wildwolf/wordpress-test-library-stubs": "^5.8",
		"wp-coding-standards/wpcs": "^2.3",
		"wp-phpunit/wp-phpunit": "^5.8",
		"yoast/phpunit-polyfills": "^1.0"
	},
	"config": {
		"sort-packages": true
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcs:fix": "phpcbf",
		"psalm": "psalm --long-progress --no-cache"
	}
}