{
	"name": "wildwolf/ww-smtp-settings",
	"type": "wordpress-plugin",
	"description": "Send emails via SMTP in WordPress",
	"keywords": [
		"wordpress",
		"smtp",
		"wordpress plugin",
		"plugin",
		"email"
	],
	"license": "MIT",
	"authors": [
		{
			"name": "Volodymyr Kolesnykov",
			"email": "volodymyr@wildwolf.name",
			"role": "Developer"
		}
	],
	"autoload": {
		"classmap": [
			"inc/"
		]
	},
	"require": {
		"php": "^7.4.0 || ^8.0.0",
		"composer/installers": "^1.0 || ^2.0",
		"wildwolf/singleton-trait": "^1.0.1"
	},
	"require-dev": {
		"automattic/vipwpcs": "^2.3",
		"johnpbloch/wordpress-core": "^6.0",
		"php-stubs/wordpress-stubs": "^6.0",
		"phpcompatibility/phpcompatibility-wp": "^2.1",
		"psalm/plugin-phpunit": "^0.18.0",
		"vimeo/psalm": "^5.0",
		"wildwolf/wordpress-test-library-stubs": "^6.0",
		"wp-coding-standards/wpcs": "^2.3",
		"wp-phpunit/wp-phpunit": "^6.0",
		"yoast/phpunit-polyfills": "^2.0"
	},
	"config": {
		"sort-packages": true,
		"platform": {
			"php": "7.4"
		},
		"allow-plugins": {
			"composer/installers": true,
			"dealerdirect/phpcodesniffer-composer-installer": true
		}
	},
	"scripts": {
		"phpcs": "phpcs",
		"phpcs:fix": "phpcbf",
		"psalm": "psalm --long-progress --no-cache"
	}
}
